package data;

/**
 * A class to encapsulate an order by item, giving the column and the direction
 * of order. Used in TrackFilter.
 * 
 * @author Michael Voong
 * 
 */
public class OrderByItem {
    public String column;

    public int direction;

    public static final int DIRECTION_ASC = 44;

    public static final int DIRECTION_DESC = 45;

    public OrderByItem(String column, int direction) {
        this.column = column;
        this.direction = direction;
    }

}
